extends ../layout

block body
  #main-user-container
    .container
      h3 user Administration
      table.table
        thead
          tr
            th CODE
            th Name
            th Username
            th Email
        tbody
          each user in users
            tr.show-item
             td.id #{user.id}
             td.name #{user.name}
             td.username #{user.username}
             td.email
              p #{user.email}
             td.show.actions
              a.btn.btn-sm.btn-primary(href="/user/show/#{user.id}") Show
             td.edit.actions
              a.btn.btn-sm.btn-warning(href="/user/edit/#{user.id}") Edit
             td.delete.actions
              form.delete(action="/user/destroy/#{user.id}" method="POST")
                input.btn.btn-sm.btn-danger(type="submit" value="Delete")
                input(type="hidden" name="method" value="delete")
                input(type="hidden" name="_csrf" value="#{_csrf}")

